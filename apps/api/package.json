{
	"$schema": "https://json.schemastore.org/package",
	"name": "api",
	"version": "1.0.0",
	"private": true,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "tsup --env.CONFIG=production",
		"clean": "rm -rf dist",
		"db:generate": "doppler run --project=\"nx\" --config=\"api\" --command=\"drizzle-kit generate\"",
		"db:migrate": "doppler run --project=\"nx\" --config=\"api\" --command=\"drizzle-kit migrate\"",
		"db:push": "doppler run --project=\"nx\" --config=\"api\" --command=\"drizzle-kit push\"",
		"db:studio": "doppler run --project=\"nx\" --config=\"api\" --command=\"drizzle-kit studio\"",
		"dev": "doppler run --project=\"nx\" --config=\"api\" --command=\"tsx watch src/index.ts\"",
		"format": "prettier --write .",
		"lint": "eslint . --max-warnings=0",
		"lint:fix": "eslint . --fix",
		"start": "node ./dist/index.js",
		"start:dev": "doppler run --project=\"nx\" --config=\"api\" --command=\"node dist/index.js\""
	},
	"dependencies": {
		"@hono/node-server": "catalog:",
		"@hono/zod-openapi": "catalog:",
		"@repo/http": "workspace:^",
		"@repo/validation": "workspace:*",
		"@scalar/hono-api-reference": "catalog:",
		"drizzle-kit": "catalog:",
		"drizzle-orm": "catalog:",
		"drizzle-zod": "catalog:",
		"hono": "catalog:",
		"pg": "catalog:",
		"uuidv7": "catalog:"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "catalog:",
		"@repo/config": "workspace:*",
		"@types/node": "catalog:",
		"@types/pg": "catalog:",
		"eslint": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-packagejson": "catalog:",
		"tsup": "catalog:",
		"tsx": "catalog:",
		"typescript": "catalog:"
	}
}
