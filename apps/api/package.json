{
	"$schema": "https://json.schemastore.org/package",
	"name": "api",
	"version": "1.0.0",
	"private": true,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "tsup --env.CONFIG=production",
		"clean": "rm -rf dist",
		"db:generate": "doppler run --project=\"nx\" --config=\"api\" --command=\"drizzle-kit generate\"",
		"db:migrate": "doppler run --project=\"nx\" --config=\"api\" --command=\"drizzle-kit migrate\"",
		"db:push": "doppler run --project=\"nx\" --config=\"api\" --command=\"drizzle-kit push\"",
		"db:seed": "doppler run --project=\"nx\" --config=\"api\" --command=\"bun src/db/scripts/seed.ts\"",
		"db:studio": "doppler run --project=\"nx\" --config=\"api\" --command=\"drizzle-kit studio\"",
		"dev": "doppler run --project=\"nx\" --config=\"api\" --command=\"bun --watch src/index.ts\"",
		"format": "prettier --write .",
		"format:check": "prettier . --check",
		"lint": "eslint . --max-warnings=0",
		"noEmit": "tsc --noEmit",
		"start": "bun ./dist/index.js",
		"start:dev": "doppler run --project=\"nx\" --config=\"api\" --command=\"bun dist/index.js\""
	},
	"dependencies": {
		"@elysiajs/openapi": "catalog:",
		"@repo/http": "workspace:^",
		"@repo/validation": "workspace:*",
		"argon2": "catalog:",
		"drizzle-kit": "catalog:",
		"drizzle-orm": "catalog:",
		"drizzle-zod": "catalog:",
		"elysia": "catalog:",
		"pg": "catalog:",
		"uuidv7": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "catalog:",
		"@repo/config": "workspace:*",
		"@types/node": "catalog:",
		"@types/pg": "catalog:",
		"eslint": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-packagejson": "catalog:",
		"tsup": "catalog:",
		"typescript": "catalog:"
	}
}
