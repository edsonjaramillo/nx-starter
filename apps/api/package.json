{
	"$schema": "https://json.schemastore.org/package",
	"name": "api",
	"version": "1.0.0",
	"private": true,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "tsup --env.CONFIG=production",
		"clean": "rm -rf dist",
		"dev": "doppler run --project=\"nx\" --config=\"api\" --command=\"tsx watch src/index.ts\"",
		"format": "prettier --write .",
		"lint": "eslint . --max-warnings=0",
		"lint:fix": "eslint . --fix",
		"start": "node ./dist/index.js",
		"start:dev": "doppler run --project=\"nx\" --config=\"api\" --command=\"node dist/index.js\""
	},
	"dependencies": {
		"@hono/node-server": "catalog:",
		"@hono/zod-openapi": "catalog:",
		"@repo/http": "workspace:^",
		"@scalar/hono-api-reference": "catalog:",
		"hono": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "catalog:",
		"@repo/config": "workspace:*",
		"@types/node": "catalog:",
		"eslint": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-packagejson": "catalog:",
		"tsup": "catalog:",
		"tsx": "catalog:",
		"typescript": "catalog:"
	}
}
