{
	"$schema": "https://json.schemastore.org/package",
	"name": "nx-starter",
	"version": "1.0.0",
	"private": true,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "nx run-many --target=build",
		"clean": "nx run-many --target=clean",
		"docker:down": "doppler run --project=\"nx\" --config=\"api\" --command=\"docker compose down\"",
		"docker:up": "doppler run --project=\"nx\" --config=\"api\" --command=\"docker compose up -d\"",
		"format": "prettier docker-compose.yml nx.json package.json eslint.config.js pnpm-workspace.yaml prettier.config.js --write && nx run-many --target=format",
		"format:check": "nx run-many --target=format:check",
		"lint": "nx run-many --target=lint",
		"noEmit": "nx run-many --target=noEmit",
		"preload": "nx run-many --target=preload"
	},
	"devDependencies": {
		"@antfu/eslint-config": "catalog:",
		"@ianvs/prettier-plugin-sort-imports": "catalog:",
		"@repo/config": "workspace:*",
		"eslint": "catalog:",
		"nx": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-packagejson": "catalog:",
		"prettier-plugin-tailwindcss": "catalog:",
		"typescript": "catalog:"
	},
	"packageManager": "pnpm@10.14.0"
}
