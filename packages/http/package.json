{
	"$schema": "https://json.schemastore.org/package",
	"name": "@repo/http",
	"version": "1.0.0",
	"license": "MIT",
	"type": "module",
	"exports": {
		"./jsend": {
			"import": "./dist/jsend.js",
			"require": "./dist/jsend.cjs",
			"types": "./dist/jsend.d.ts"
		},
		"./status-codes": {
			"import": "./dist/status-codes.js",
			"require": "./dist/status-codes.cjs",
			"types": "./dist/status-codes.d.ts"
		}
	},
	"scripts": {
		"build": "tsup --env.CONFIG=production",
		"clean": "rm -rf dist",
		"dev": "tsup --env.CONFIG=development",
		"format": "prettier --write .",
		"format:check": "prettier . --check",
		"lint": "eslint . --max-warnings=0",
		"preload": "tsup --env.CONFIG=preload"
	},
	"dependencies": {
		"zod": "catalog:"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "catalog:",
		"@repo/config": "workspace:*",
		"eslint": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-packagejson": "catalog:",
		"tsup": "catalog:",
		"typescript": "catalog:"
	}
}
