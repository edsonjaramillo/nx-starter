{
	"$schema": "https://json.schemastore.org/package",
	"name": "@repo/ui",
	"version": "1.0.0",
	"license": "MIT",
	"type": "module",
	"exports": {
		"./button": {
			"import": "./dist/button.js",
			"require": "./dist/button.cjs",
			"types": "./dist/button.d.ts"
		},
		"./form": {
			"import": "./dist/form.js",
			"require": "./dist/form.cjs",
			"types": "./dist/form.d.ts"
		},
		"./input": {
			"import": "./dist/input.js",
			"require": "./dist/input.cjs",
			"types": "./dist/input.d.ts"
		},
		"./responsive": {
			"import": "./dist/responsive.js",
			"require": "./dist/responsive.cjs",
			"types": "./dist/responsive.d.ts"
		},
		"./tailwind/source": "./ui.css",
		"./tailwind/theme": "./tailwind/theme.css"
	},
	"scripts": {
		"build": "tsup --env.CONFIG=production",
		"clean": "rm -rf dist",
		"dev": "tsup --env.CONFIG=development",
		"format": "prettier --write .",
		"format:check": "prettier . --check",
		"lint": "eslint . --max-warnings=0",
		"noEmit": "tsc --noEmit",
		"preload": "tsup --env.CONFIG=preload"
	},
	"dependencies": {
		"class-variance-authority": "catalog:",
		"react": "catalog:",
		"react-hook-form": "catalog:",
		"tailwind-merge": "catalog:",
		"tailwindcss": "catalog:"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "catalog:",
		"@repo/config": "workspace:*",
		"@types/node": "catalog:",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"eslint": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-packagejson": "catalog:",
		"prettier-plugin-tailwindcss": "catalog:",
		"tsup": "catalog:",
		"typescript": "catalog:"
	}
}
